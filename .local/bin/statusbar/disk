#!/bin/sh

# Status bar module for disk space
# $1 should be drive mountpoint
# $2 is optional icon, otherwise mountpoint will displayed

# Used and total storage in / and /home (rounded to 1024B)
ROOTUSED=$(df -h | grep '/$' | awk '{print $3}')
ROOTTOT=$(df -h | grep '/$' | awk '{print $2}')
HOMEUSED=$(df -h | grep '/home$' | awk '{print $3}')
HOMETOT=$(df -h | grep '/home$' | awk '{print $2}')

# STATUS
# xsetroot -name " ^c#b8bb26^‚ñº ${rxs}KiB/s ‚ñ≤ ${txs}KiB/s^d^ $(network) ^c#928374^|^d^ $(alsa) ^c#928374^|^d^ $WEATHER ^c#928374^|^d^ ÔÄï: ${HOMEUSED}/${HOMETOT} ^c#928374^|^d^ /: ${ROOTUSED}/${ROOTTOT} ^c#928374^|^d^ RAM ${MEMUSED}/${MEMTOT} ^c#928374^|^d^ ^c#b8bb26^GPU ${GPU_TEMP}¬∞C^d^ ^c#928374^|^d^ ^c#fabd2f^Ôãõ ${CPU_FREQ}Mhz ${CPU_TEMP}¬∞C^d^ ^c#928374^|^d^ $(ups) ^c#928374^|^d^ $LOCALTIME "
#printf "%s: %s\n" "$icon" "$(df -h "$1" | awk ' /[0-9]/ {print $3 "/" $2}')"
printf " Ôë≠: ${HOMEUSED}/${HOMETOT} /: ${ROOTUSED}/${ROOTTOT}  "
